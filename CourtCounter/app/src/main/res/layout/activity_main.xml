<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            /** TEAM A*/

            <LinearLayout
                android:id="@+id/team_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:padding="16sp"
                    android:text="Team A"
                    android:textColor="#616161" />
                /** TEAM A WYNIK */

                <TextView
                    android:id="@+id/team_a_scoreA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="wynik"
                    android:textColor="#000000"
                    android:textSize="56sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="twopointA"

                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="+2 points" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="threepointA"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="+3 points" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onepointA"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="Free throw" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="undoA"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="undo" />

            </LinearLayout>

            <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"></view>
            /** TEAM B*/

            <LinearLayout
                android:id="@+id/team_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:padding="16sp"
                    android:text="Team B"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/team_a_scoreB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24sp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="wynik"
                    android:textColor="#000000"
                    android:textSize="56sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="twopointB"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="+2 points" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="threepointB"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="+3 points" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onepointB"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="Free throw" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="undoB"
                    android:text="undo" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="RESET"
            android:text="RESET" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
